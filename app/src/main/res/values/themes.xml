<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Base da Aplicação. HERDA DE Theme.Material3.DayNight.NoActionBar (CORRIGIDO) -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- CORES M3 (Usando atributos de tema M3 e nossos nomes de recurso M3) -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <!-- A cor da Barra de Status usa o color_primary_variant que criamos. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant</item>

        <!-- colorAccent foi substituído por colorSecondary no M3 -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
    </style>

    <!-- Tema para a Activity de Detalhes (WidgetActivity) - Limpamos as referências M2 aqui também. -->
    <style name="Theme.BatteryWidget" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- Configurações para janelas transparentes, típicas de widgets (mantidas) -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant</item>
    </style>

    <!-- TEMA REQUERIDO PELO MANIFEST (mantido o padrão) -->
    <style name="Theme.BatteryWidget.NoActionBar" parent="Theme.BatteryWidget">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ESTILOS PARA activity_widget.xml (Detalhes da Bateria) - Mantidos inalterados, pois já usam as referências corretas de 'widget'. -->

    <!-- Estilo para a linha que contém o rótulo e o valor -->
    <style name="DetailRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Estilo para o rótulo (texto da esquerda) -->
    <style name="DetailLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_text_color</item>
    </style>

    <!-- Estilo para o valor (texto da direita) -->
    <style name="DetailValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/widget_text_color</item>
    </style>

    <!-- Estilo para a linha separadora horizontal -->
    <style name="DetailSeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator_color</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Estilo de fundo para widgets (usado por widget_battery_graph.xml) -->
    <style name="WidgetBackground" parent="">
        <item name="android:background">@drawable/widget_background</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>