<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 1. Texto de Status/Mensagem do Gráfico -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/graph_status_empty"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="8dp" />

    <!-- 2. Container de Detalhes da Bateria (Com ScrollView) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Linha 1: Status -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textState" />
                <TextView
                    android:id="@+id/status_state"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>
            <View style="@style/DetailSeparatorStyle" />

            <!-- Linha 2: Ligado (Plug) -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textPlug" />
                <TextView
                    android:id="@+id/status_plug"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>
            <View style="@style/DetailSeparatorStyle" />

            <!-- Linha 3: Nível (Level) -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textLevel" />
                <TextView
                    android:id="@+id/status_level"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>
            <View style="@style/DetailSeparatorStyle" />

            <!-- Linha 4: Escala (Scale) -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textScale" />
                <TextView
                    android:id="@+id/status_scale"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>
            <View style="@style/DetailSeparatorStyle" />

            <!-- Linha 5: Voltagem (Voltage) -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textVoltage" />
                <TextView
                    android:id="@+id/status_voltage"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>
            <View style="@style/DetailSeparatorStyle" />

            <!-- Linha 6: Temperatura (Temperature) -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textTemperature" />
                <TextView
                    android:id="@+id/status_temp"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>
            <View style="@style/DetailSeparatorStyle" />

            <!-- Linha 7: Tecnologia (Technology) -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textTechnology" />
                <TextView
                    android:id="@+id/status_technology"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>
            <View style="@style/DetailSeparatorStyle" />

            <!-- Linha 8: Saúde (Health) -->
            <LinearLayout style="@style/DetailRowStyle">
                <TextView style="@style/DetailLabelStyle"
                    android:text="@string/textHealth" />
                <TextView
                    android:id="@+id/status_health"
                    style="@style/DetailValueStyle"
                    android:text="@string/data_unavailable_short" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 3. Contêiner do Gráfico de Histórico -->
    <LinearLayout
        android:id="@+id/graph_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/widget_graph_background"
        android:layout_marginTop="16dp" />

</LinearLayout>