<?xml version="1.0" encoding="utf-8"?>
<!--
    Metadados de configuração para o Battery Widget.
    Define a aparência, o comportamento e as capacidades de redimensionamento do widget.
-->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:initialKeyguardLayout="@layout/widget_layout"
    android:initialLayout="@layout/widget_layout"
    android:minWidth="120dp"
    android:minHeight="60dp"
    android:updatePeriodMillis="0"
    android:previewImage="@drawable/widget_preview"
    android:resizeMode="horizontal|vertical"
    android:widgetCategory="home_screen|keyguard"
    android:widgetFeatures="reconfigurable"
    android:targetCellWidth="2"
    android:targetCellHeight="1"
    android:description="@string/widget_description">
    <!--
        android:updatePeriodMillis="0" é crucial:
        Não queremos que o Android force a atualização automaticamente.
        Em vez disso, usaremos o nosso próprio MonitorService (a seguir) para
        enviar atualizações baseadas em eventos reais da bateria ou num intervalo definido.
    -->
</appwidget-provider>