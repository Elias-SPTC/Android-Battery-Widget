<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_text_container"
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:background="@drawable/widget_background_dark">

    <!-- Barra de Progresso estilizada como uma pilha -->
    <ProgressBar
        android:id="@+id/battery_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/progress_bar_horizontal_battery"
        tools:progress="85" />

    <!-- Container Relativo para alinhar o raio e o texto -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Ícone de Raio, alinhado à esquerda -->
        <ImageView
            android:id="@+id/charging_bolt_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_charging_bolt"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Texto da Porcentagem, alinhado à direita -->
        <TextView
            android:id="@+id/battery_level_text_only"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|end"
            android:textColor="#FFFFFFFF"
            android:textSize="22sp" 
            android:textStyle="bold"
            tools:text="85%" />

    </RelativeLayout>

</FrameLayout>
