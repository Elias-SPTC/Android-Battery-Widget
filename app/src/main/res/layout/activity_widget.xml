<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".WidgetActivity">

    <!-- AppBar com Título e Botão de Configurações -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            app:title="Detalhes da Bateria">

            <!-- Botão de Configurações -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:contentDescription="Configurações do aplicativo"
                android:src="@drawable/ic_settings_white"
                app:tint="@color/white" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Conteúdo Principal (Scrollable) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SEÇÃO 1: Nível Atual e Status -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <!-- Vista Circular de Nível (BatteryRenderer) -->
                <!-- Este View será o círculo desenhado dinamicamente -->
                <com.em.batterywidget.BatteryRenderer
                    android:id="@+id/battery_renderer_view"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Porcentagem do Nível (Overlay) -->
                <TextView
                    android:id="@+id/tv_battery_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="85%"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-thin"
                    app:layout_constraintTop_toTopOf="@id/battery_renderer_view"
                    app:layout_constraintStart_toStartOf="@id/battery_renderer_view"
                    app:layout_constraintEnd_toEndOf="@id/battery_renderer_view"
                    app:layout_constraintBottom_toBottomOf="@id/battery_renderer_view"
                    app:layout_constraintVertical_bias="0.4"
                    android:gravity="center"/>

                <!-- Status de Carregamento (Overlay) -->
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Carregando (AC)"
                    android:textSize="16sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_battery_level"
                    app:layout_constraintStart_toStartOf="@id/battery_renderer_view"
                    app:layout_constraintEnd_toEndOf="@id/battery_renderer_view"/>

                <!-- Ícone de Carregamento (Relâmpago - Overlay) -->
                <ImageView
                    android:id="@+id/img_charging_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_charging_generic"
                    android:tint="@color/charging_color"
                    android:visibility="gone"
                    android:contentDescription="Ícone de status de carregamento"
                    app:layout_constraintBottom_toTopOf="@id/tv_battery_level"
                    app:layout_constraintEnd_toStartOf="@id/tv_battery_level"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1AFFFFFF"
                android:layout_marginBottom="24dp"/>

            <!-- SEÇÃO 2: GRÁFICO DE HISTÓRICO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Histórico de Nível da Bateria (24h)"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- O BatteryGraphView que desenhará o gráfico -->
            <com.em.batterywidget.BatteryGraphView
                android:id="@+id/battery_graph_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_widget_rounded"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1AFFFFFF"
                android:layout_marginBottom="24dp"/>

            <!-- SEÇÃO 3: DETALHES ESTENDIDOS (GRID) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes Estendidos da Bateria"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_widget_rounded"
                android:padding="16dp">

                <!-- Linha 1: Saúde e Tecnologia -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tv_health_status"
                        style="@style/DetailTextStyle"
                        tools:text="Saúde: Boa" />
                    <TextView
                        android:id="@+id/tv_technology"
                        style="@style/DetailTextStyle"
                        tools:text="Tecnologia: Li-ion" />
                </LinearLayout>

                <!-- Linha 2: Voltagem e Temperatura -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/tv_voltage"
                        style="@style/DetailTextStyle"
                        tools:text="Voltagem: 3.85 V" />
                    <TextView
                        android:id="@+id/tv_temperature"
                        style="@style/DetailTextStyle"
                        tools:text="Temperatura: 32.5 °C" />
                </LinearLayout>

                <!-- Linha 3: Capacidade e Ciclos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_max_capacity"
                        style="@style/DetailTextStyle"
                        tools:text="Capacidade Máxima: 3500 mAh" />
                    <TextView
                        android:id="@+id/tv_cycle_count"
                        style="@style/DetailTextStyle"
                        tools:text="Contagem de Ciclos: 150" />
                </LinearLayout>

                <!-- Última atualização -->
                <TextView
                    android:id="@+id/tv_last_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="12sp"
                    tools:text="Última atualização: 05:45:30" />
            </LinearLayout>

            <!-- Espaço Extra para Preenchimento -->
            <View
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>