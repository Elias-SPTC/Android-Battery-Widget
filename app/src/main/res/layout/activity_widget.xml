<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título principal, definido em código (ou usar uma string se necessário) -->
        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_detail_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"/>

        <!-- Linha de Status -->
        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textState" />
            <TextView
                android:id="@+id/tv_status_value"
                style="@style/DetailValueStyle"
                tools:text="Charging" />
        </LinearLayout>

        <!-- Linha de Ligado -->
        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textPlug" />
            <TextView
                android:id="@+id/tv_plugged_value"
                style="@style/DetailValueStyle"
                tools:text="AC" />
        </LinearLayout>

        <View style="@style/DetailSeparatorStyle" />

        <!-- Linha de Nível e Escala -->
        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textLevel" />
            <TextView
                android:id="@+id/tv_level_value"
                style="@style/DetailValueStyle"
                tools:text="85% (Max: 100)" />
        </LinearLayout>

        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textScale" />
            <TextView
                android:id="@+id/tv_scale_value"
                style="@style/DetailValueStyle"
                tools:text="100" />
        </LinearLayout>

        <View style="@style/DetailSeparatorStyle" />

        <!-- Linha de Voltagem -->
        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textVoltage" />
            <TextView
                android:id="@+id/tv_voltage_value"
                style="@style/DetailValueStyle"
                tools:text="3.987 V" />
        </LinearLayout>

        <!-- Linha de Temperatura -->
        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textTemperature" />
            <TextView
                android:id="@+id/tv_temperature_value"
                style="@style/DetailValueStyle"
                tools:text="30.5 C" />
        </LinearLayout>

        <!-- Linha de Tecnologia -->
        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textTechnology" />
            <TextView
                android:id="@+id/tv_technology_value"
                style="@style/DetailValueStyle"
                tools:text="Li-ion" />
        </LinearLayout>

        <View style="@style/DetailSeparatorStyle" />

        <!-- Linha de Saúde -->
        <LinearLayout
            style="@style/DetailRowStyle">
            <TextView
                style="@style/DetailLabelStyle"
                android:text="@string/textHealth" />
            <TextView
                android:id="@+id/tv_health_value"
                style="@style/DetailValueStyle"
                tools:text="Good" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>