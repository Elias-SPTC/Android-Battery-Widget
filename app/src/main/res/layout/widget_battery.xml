<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_widget_rounded"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <!-- Battery Level Text -->
        <TextView
            android:id="@+id/tv_battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_unavailable_short"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_color" />

        <!-- Charging Indicator Icon -->
        <ImageView
            android:id="@+id/iv_charging_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/widget_description"
            android:src="@drawable/ic_battery_default" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/progress_battery"
        android:layout_marginBottom="8dp"
        android:max="100"
        android:progress="0" />

    <!-- Refresh Button -->
    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"/>
</LinearLayout>