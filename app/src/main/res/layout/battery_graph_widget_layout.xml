<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_graph_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background_dark"
    android:padding="8dp">

    <!-- Área principal para o nosso gráfico de barras simulado -->
    <LinearLayout
        android:id="@+id/bar_chart_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:gravity="bottom">

        <!-- 20 barras para representar o histórico. Serão controladas programaticamente. -->
        <View android:id="@+id/bar_1" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good"/>
        <View android:id="@+id/bar_2" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_3" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_4" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_5" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_6" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_7" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_8" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_9" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_10" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_11" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_12" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_13" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_14" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_15" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_16" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_17" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_18" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_19" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>
        <View android:id="@+id/bar_20" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="@color/graph_line_good" android:layout_marginStart="2dp"/>

    </LinearLayout>

    <!-- Área lateral para dados não plotáveis -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="8dp">

        <TextView android:id="@+id/tv_current_level" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="22sp" android:textStyle="bold" tools:text="39%" />
        <TextView android:id="@+id/tv_current_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="12sp" tools:text="Descarregando" />
        <TextView android:id="@+id/tv_current_health" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:textColor="@android:color/white" android:textSize="12sp" tools:text="Saúde: Boa" />

    </LinearLayout>

</LinearLayout>
