<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"  android:layout_height="match_parent" android:gravity="center"
            android:minWidth="50dp"  android:minHeight="50dp"> <ImageView
            android:id="@+id/battery_view"
            android:layout_width="match_parent"  android:layout_height="match_parent" android:scaleType="fitCenter"
            android:contentDescription="Indicador de Nível de Bateria"/>

            <ImageView
                android:id="@+id/charge_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:contentDescription="Ícone de Carga"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/info_text_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center_horizontal"

        android:maxLines="2"
        android:ellipsize="end"
        android:singleLine="false" />

</LinearLayout>