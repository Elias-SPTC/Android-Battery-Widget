<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o tipo de widget"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Botões Renomeados e Adicionados -->
    <Button
        android:id="@+id/btn_configure_standing_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilha em Pé (Ícone)" />

    <Button
        android:id="@+id/btn_configure_lying_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilha Deitada (Texto)" />

    <Button
        android:id="@+id/btn_configure_details_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tabela de Detalhes" />

    <Button
        android:id="@+id/btn_configure_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gráfico Detalhado" />

</LinearLayout>
